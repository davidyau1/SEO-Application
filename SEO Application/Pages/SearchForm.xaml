<Page x:Class="SEO_Application.Pages.SearchForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SEO_Application.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchForm">

    <Grid>

        <Label Content="Enter SEO Search Details" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label Content="SearchTerm" HorizontalAlignment="Left" Margin="50,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="searchTerm" HorizontalAlignment="Left" Margin="159,33,0,0" Text="{Binding SearchTerm}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Label Content="Url" HorizontalAlignment="Left" Margin="50,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Url" HorizontalAlignment="Left" Margin="159,63,0,0" Text="{Binding Url}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Search Page" HorizontalAlignment="Left"  Margin="50,90,0,0" Height="25" VerticalAlignment="Top" Width="50" Click="SearchClick"/>

    </Grid>
</Page>
